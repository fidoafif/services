{
  "name": "@agora/authorizer",
  "version": "0.0.1",
  "description": "Agora Authorizer service",
  "author": "Sofyan Hadi Ahmad",
  "private": true,
  "publishConfig": {
    "access": "private"
  },
  "scripts": {
    "start": "nodemon",
    "local": "yarn build && sls offline --port 3003 --skipCacheInvalidation --stage local --env local",
    "offline": "yarn local",
    "build": "rm -rf dist && tsc --p tsconfig.json -d",
    "build:deploy": "yarn build && sls deploy",
    "deploy": "sls deploy",
    "deploy:staging": "NODE_ENV=staging sls deploy --stage staging --env staging",
    "deploy:production": "NODE_ENV=production sls deploy --stage production --env production",
    "barrels": "barrelsby --delete -d ./src --singleQuotes",
    "precommit": "yarn e2e:coverage",
    "lint": "tslint -p tsconfig.json -c tslint.json \"src/**/*.ts\" \"e2e/**/*.ts\" -e \"*spec.ts\"",
    "lint:fix": "yarn lint --fix",
    "e2e": "jest --config=jest-e2e.json --forceExit --detectOpenHandles",
    "e2e:watch": "jest --watch --config=jest-e2e.json --detectOpenHandles",
    "e2e:coverage": "jest --config=jest-e2e.json --coverage --coverageDirectory=./coverage --detectOpenHandles"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@nestjs/common": "^6.6.7",
    "aws-lambda": "^0.1.2",
    "axios": "^0.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.31",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.17",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.6.9",
    "@types/supertest": "^2.0.8",
    "@types/url-join": "^4.0.0",
    "barrelsby": "^2.1.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-offline": "^5.9.0",
    "serverless-plugin-typescript": "1.1.7",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  }
}
